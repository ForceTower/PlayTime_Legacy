<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="FadeEdgeLayout">
        <attr name="fadeEdges" format="integer">
            <flag name="top" value="1"/>
            <flag name="bottom" value="2"/>
            <flag name="left" value="4"/>
            <flag name="right" value="8"/>
        </attr>
        <attr name="fadeSizeTop" format="dimension"/>
        <attr name="fadeSizeBottom" format="dimension"/>
        <attr name="fadeSizeStart" format="dimension"/>
        <attr name="fadeSizeEnd" format="dimension"/>
        <attr name="fadeColorStart" format="color"/>
        <attr name="fadeColorEnd" format="color"/>
    </declare-styleable>
</resources>